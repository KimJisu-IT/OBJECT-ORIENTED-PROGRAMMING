import java.awt.*;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.TitledBorder;

public class GridBagLayout extends Frame{
		private Button b0, b1, b2, b3, b4, b5, b6, b7, b8, b9, bpm, bdot, bp, bm, bmulti, bd, bc, bce, bdel, bpercent, bx, bequal;
		Panel display, board;
		TextField tf;
		GridBagConstraints constraint = new GridBagConstraints();
		
		public GridBagLayout() {
			super("GridBagLayout: KJS");
			setLayout((LayoutManager) new GridBagLayout());
			GridBagLayout gridbag = new GridBagLayout();
			GridBagConstraints constraint = new GridBagConstraints();
			
			display= new Panel();
			board= new Panel();
			
			tf= new TextField(80);
			display.add(tf);
			// 화면 구성
			
			   
			   
			   constraint = new GridBagConstraints();
			   constraint.weightx = 1.0;
			   constraint.weighty = 1.0;
			   constraint.fill = GridBagConstraints.BOTH;
			   b0 = (new Button("0"));
			   b1 = (new Button("1"));
			   b2 = new Button("2");
			   b3 = new Button("3");
			   b4 = new Button("4");
			   b5 = new Button("5");
			   b6 = new Button("6");
			   b7 = new Button("7");
			   b8 = new Button("8");
			   b9 = new Button("9");
			   
			   bpm = new Button("+/-");
			   bdot = new Button(".");
			   bp = new Button("+");
			   bm = new Button("-");
			   bmulti = new Button("*");
			   bd = new Button("/");
			   bpercent = new Button("%");
			   
			   
			   bx = new Button("1/x");
			   bce = new Button("CE");
			   bdel = new Button("DEL");
			   bc = new Button("C");
			   
			   bequal = new Button("=");
			   // 모든 버튼 객체 생성
			   
			   
			   board = new Panel();
			   board.setLayout((LayoutManager) gridbag);
			   // 판넬 객체를 생성하고 레이아웃을 4행5열로 설정
			
			   layout();
			   layout(b8,1,0,1,1);
			   layout(b9,2,0,1,1);
			   layout(bd,3,0,1,1);
			   layout(bsqrt,4,0,1,1);
			   layout(b4,0,1,1,1);
			   layout(b5,1,1,1,1);
			   layout(b6,2,1,1,1);
			   layout(bmulti,3,1,1,1);
			   layout(bpercent,4,1,1,1);
			   layout(b1,0,2,1,1);
			   layout(b2,1,2,1,1);
			   layout(b3,2,2,1,1);
			   layout(bm,3,2,1,1);
			   layout(bp,4,2,1,2);  // "+" 부분
			   layout(b0,0,0,1,1);
			   layout(bpm,1,3,1,1);
			   layout(bdot,2,3,1,1);
			   layout(bequal,3,3,1,1);

			   // 판넬을 표시하는 타이틀 경계선을 설정
			
			
			add(display,"North");
			add(board);
			
			setSize(600,500);
			setVisible(true);
		}


		public void layout(Component obj, int x, int y,int width, int height)
		  {
			constraint.gridx=x; // 시작위치 x
			constraint.gridy=y; // 시작위치 y
			constraint.gridwidth=width; // 컨테이너 너비
		    constraint.gridheight=height;  // 컨테이너 높이
		    display.add(obj,constraint);
		  }
		
		  public static void main(String[] args){
			  GridBagLayout gd = new GridBagLayout();
			   gd.setTitle("Calculator");
			   gd.setSize(600,500);
			   gd.setVisible(true);
			   }
}
